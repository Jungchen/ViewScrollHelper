<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hrules.viewscrollhelper.demo"
    >

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/appName"
      android:theme="@style/AppTheme"
      >

    <activity
        android:name=".MainActivity"
        android:label="@string/appName"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".RecyclerActivity"
        android:label="@string/title_recyclerView"
        />
    <activity
        android:name=".RecyclerTabsActivity"
        android:label="@string/title_recyclerViewTabs"
        />
    <activity
        android:name=".ScrollViewActivity"
        android:label="@string/title_scrollView"
        />
  </application>

</manifest>
